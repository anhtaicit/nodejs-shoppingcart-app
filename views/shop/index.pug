extends ../layouts/layout

block content
  .row
    each product in products
      .col-sm-6.col-md-4
        .card(style="width: 20rem;")
          img.card-img-top(src=product.imagePath, alt="Card image cap")
          .card-body
            h4.card-title #{product.title}
            p.card-text #{product.description}
            .clearfix
              .price.pull-left $#{product.price}
              a.btn.btn-success.pull-right(href="/add-to-cart/"+product._id) Add To Cart